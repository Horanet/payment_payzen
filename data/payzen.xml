<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record id="payment_acquirer_payzen" model="payment.acquirer">
            <field name="name">Payzen</field>
            <field name="provider">payzen</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="view_template_id" ref="payzen_acquirer_button"/>
            <field name="environment">test</field>
            <field name="pre_msg">
              <![CDATA[<p>You will be redirected to the Payzen website after cliking on the payment button.</p>]]>
            </field>
            <field name="payzen_websitekey">dummy</field>
            <field name="payzen_secretkey">dummy</field>
        </record>

        <record id="account_payzen" model="account.account">
            <field name="code">512103</field>
            <field name="name">Payzen</field>
            <field name="type">other</field>
            <field name="user_type" ref="account.data_account_type_bank"></field>
        </record>

        <record id="account_journal_payzen" model="account.journal">
            <field name="name">Payzen</field>
            <field name="code">BNK3</field>
            <field name="type">bank</field>
            <field name="default_debit_account_id" ref="account_payzen"></field>
            <field name="default_credit_account_id" ref="account_payzen"></field>
        </record>

    </data>
</openerp>
