<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron to check PayFIP draft payment transactions -->
        <record id="cron_check_draft_payment_transactions" model="ir.cron" forcecreate="1">
            <field name="name">Cron to check Payzen waiting payment transactions</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="model" eval="'payment.transaction'"/>
            <field name="function" eval="'payzen_cron_check_draft_payment_transactions'"/>
            <field name="args" eval="(7, 48)"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="nextcall"
                   eval="(datetime.today()).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
