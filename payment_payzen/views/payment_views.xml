<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_payzen" model="ir.ui.view">
        <field name="name">acquirer.form.payzen</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'payzen')]}">
                    <field name="payzen_shop_id" />
                    <field name="payzen_test_cert" />
                    <field name="payzen_prod_cert" />
                    <field name="payzen_form_action_url" />
                    <field name="payzen_test_api_password" />
                    <field name="payzen_prod_api_password" />
                </group>
            </xpath>
        </field>
    </record>


    <record id="transaction_form_payfip" model="ir.ui.view">
        <field name="name">Add action for Payzen acquirer</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form"/>
        <field name="arch" type="xml">
            <!-- Add button to test transaction on acquirer site -->
            <xpath expr="//header" position="inside">
                <button name="action_payzen_check_transaction_status" type="object"
                    class="oe_read_only"
                    string="Check Payzen transaction status"
                    attrs="{'invisible': ['|', ('state','not in',['draft','pending']), ('provider', '!=', 'payzen')]}"
                    />
            </xpath>
        </field>
    </record>

</odoo>
