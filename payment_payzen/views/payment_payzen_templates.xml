            <input type="hidden" name="vads_cust_email" t-att-value="vads_cust_email"/>
            <input type="hidden" name="vads_cust_phone" t-att-value="vads_cust_phone"/>

            <!-- URLs -->
            <input type="hidden" name="vads_url_return" t-att-value="vads_url_return"/>
        </div>
    </template>
</odoo>
