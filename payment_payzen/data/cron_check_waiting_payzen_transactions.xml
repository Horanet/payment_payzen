<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron to check PayFIP draft payment transactions -->
        <record id="cron_check_draft_payment_transactions" model="ir.cron">
            <field name="name">Cron to check Payzen waiting payment transactions</field>
            <field name="model_id" ref="payment.model_payment_transaction"/>
            <field name="state">code</field>
            <field name="code">model.payzen_cron_check_draft_payment_transactions(minutes_min_check=7, hours_max_check=48)</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="nextcall"
                   eval="(datetime.today()).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
